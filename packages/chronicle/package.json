{
  "name": "@sage/chronicle",
  "version": "1.0.0",
  "description": "Append-only NDJSON event logs for agent memory",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run"
  },
  "keywords": [
    "sage",
    "chronicle",
    "event-log",
    "append-only",
    "ndjson"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sage/utils": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}