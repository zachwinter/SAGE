{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "bundler",
    "module": "es2022",
    "lib": [
      "ES2022"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@sage/graph": [
        "packages/graph/src/index"
      ],
      "@sage/graph/*": [
        "packages/graph/src/*"
      ],
      "@sage/utils": [
        "packages/utils/src/index.ts"
      ],
      "@sage/utils/*": [
        "packages/utils/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/dist"
  ],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "jsx": "react-jsx"
    }
  }
}