{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "bundler",
    "module": "es2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "jsx": "react-jsx",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "jsx": "react-jsx"
    }
  }
}
